<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ominext.com.expandableandloadmorerecyclerview.activity.MainActivity">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_expandable_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expandable RecyclerView"
            android:onClick="expandableRecyclerView"/>

        <Button
            android:id="@+id/btn_load_more_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_expandable_recycler_view"
            android:text="Load more RecyclerView"
            android:onClick="loadMoreRecyclerView"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
